#include<stdio.h>
#include<string.h>
int main()
{
    //code
    char corsemaforo[10];
    
    printf("Digite a cor do semáforo\n");
    scanf("%s", corsemaforo);
    if (strcmp(corsemaforo,"vermelho")==0)
    {
    printf("Não siga\n");
    printf("Risco de vida");
    }
    else if(strcmp(corsemaforo,"amarelo")==0)
    {
    printf("Atenção diminua velocidade");
    }
    else if(strcmp(corsemaforo,"verde")==0)
    {
        printf("Siga com cuidado");
    }
    else printf("Perigo!Semáforo com defeito");
    return 0;
}


